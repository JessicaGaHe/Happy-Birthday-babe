  <script>
    const letter = document.getElementById('letter');
    const holaText = document.getElementById('hola-text');

    // DespuÃ©s de 2 segundos, animar la carta
    setTimeout(() => {
      holaText.style.display = 'none'; // se oculta el texto "Hola mi amor"

      // Mostrar y animar la carta desde abajo
      letter.style.display = 'block';
      setTimeout(() => {
        letter.style.top = '0';
        letter.style.transform = 'translateY(0)';
        letter.style.opacity = '1';
      }, 50);
    }, 2000);
  </script>

